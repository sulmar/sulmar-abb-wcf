<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>

	<system.serviceModel>

		<bindings>
			<basicHttpBinding>
				<binding name="HttpStreaming"
						transferMode="Streamed" 
						  maxBufferSize="65536"   
						  maxReceivedMessageSize="64000000" 						 
						 />
			</basicHttpBinding>
		</bindings>

		<services>

			<service name="DocumentServices.DocumentService" behaviorConfiguration="mexBehavior" >

				<endpoint address="DocumentService"
						  binding="basicHttpBinding"
						  bindingConfiguration="HttpStreaming"
						  contract="DocumentServices.IDocumentService"
						  
						  >

				</endpoint>

				<endpoint address="mex"
						  binding="mexHttpBinding"
						  contract="IMetadataExchange" >

				</endpoint>

				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:5000" />
					</baseAddresses>
				</host>

			</service>
		</services>

		<behaviors>
			<serviceBehaviors>
				<behavior name="mexBehavior">
					<serviceMetadata httpGetEnabled="true" />
				</behavior>
			</serviceBehaviors>
		</behaviors>

	</system.serviceModel>
</configuration>